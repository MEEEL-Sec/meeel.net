# Important
escape Super_L
exec /usr/bin/rpws init 9 -k -a
exec ratpoison -c "echo `date +%r`"
bind a exec ratpoison -c "echo `date +%r`"
bind C-a exec ratpoison -c "echo `date +%r`"
bind C-Q quit
bind C-R restart
bind Return exec urxvt
bind C-Return exec urxvt

# Vim Binds
bind h focusleft
bind l focusright
bind k focusup
bind j focusdown
bind C-h exchangeleft
bind C-l exchangeright
bind C-k exchangeup
bind C-J exchangedown

# Management
bind x swap
bind C-x delete
bind C-X kill
bind t title
bind q only
## RPWS
bind M-1 rpws1
bind M-2 rpws2
bind M-3 rpws3
bind M-4 rpws4
bind M-5 rpws5
bind M-6 rpws6
bind M-7 rpws7
bind M-8 rpws8
bind M-9 rpws9
bind C-M-1 rpwsm1
bind C-M-2 rpwsm2
bind C-M-3 rpwsm3
bind C-M-4 rpwsm4
bind C-M-5 rpwsm5
bind C-M-6 rpwsm6
bind C-M-7 rpwsm7
bind C-M-8 rpwsm8
bind C-M-9 rpwsm9

# Variables
set bargravity c
set padding 5 5 5 5
set border 3
set barborder 3
set waitcursor 1

## Colors
set fgcolor #fff3d0
set bgcolor #212121
set fwcolor #fff3d0
set bwcolor #000000

# THE GREAT UNBINDS
unbind X
unbind C-g
unbind A
unbind C-A
unbind K
unbind C-K
unbind i
unbind C-i
unbind m
unbind C-m
unbind C-n
unbind C-p
unbind C-apostrophe
unbind C-space
unbind C-v
unbind V
unbind C-V
unbind C-w
unbind C-s
unbind C-S
unbind C-r
unbind C-underscore
unbind C-u
unbind Q
